*{padding:0; margin:0;border:0;font-family: "helvetica";text-decoration:none;}
html,body{height: 100%;}
/*body{background: url(../img/global/bg.png) repeat-y;background-size: 100% auto;}*/
ul,li{list-style:none;}
body{height: 100%;background: url(../img/global/bg2.png) no-repeat;background-size: 100% 100%;}

.full_width{width:100%;}
.hidden{display: none;}

.root_container{display: flex;flex-direction: column;width: 100%;height: 100%;}
a{color: #000;}
.header{width: 100%;height: 1rem;box-sizing: border-box;display: flex;background: url(../img/global/header_bg.png) no-repeat;background-size: 100% 100%;align-items: center;min-height: 1rem;}
.header img{height: 0.6rem;margin-left: 0.2rem;}
.header a img{height: 0.6rem;margin-right: 0.2rem;}
.header span {font-size: 0.3rem;color: #fff;text-shadow: 0 0 0.3rem #019bf4;flex: 1;justify-content: center;display: flex;letter-spacing: 0.03rem;}
.fix_bottom{width: 100%;height: 2.1rem;background: url(../img/global/bottom_bg.png) no-repeat; background-size: 100% 100%;display: flex;align-items: center;padding: 0.3rem 0.2rem 0.2rem 0.2rem;box-sizing: border-box;}
.fix_bottom .left{width: 3.5rem;}
.fix_bottom .left .left_top{height: 0.9rem;display: flex;}
.fix_bottom .left .left_top .icon{margin-right: 0.17rem;}
.fix_bottom .left .left_top .icon img{width: 0.98rem;}
.fix_bottom .left .left_top .ranking {display: flex;flex-direction: column;justify-content: center;}
.fix_bottom .left .left_top .ranking div:first-child{font-size: 0.3rem;color: #fff;letter-spacing: 0.01rem;}
.fix_bottom .left .left_top .ranking div:nth-child(2){font-size: 0.2rem;color: #63E0FF;}


.info_alert{width: 100%;height: 100%;background: rgba(29,38,47,.8);position: absolute;top: 0;}
