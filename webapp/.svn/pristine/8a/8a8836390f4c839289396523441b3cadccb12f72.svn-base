* {
    margin: 0;
    padding: 0;
    -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
}

a {
    text-decoration: none;
}

body {
    width: 100%;
    background: linear-gradient(#2187f5,#2388f2);
    background-size: 100%;
    font-family: 'PingFang SC';
    overflow-x: hidden;
}

.container {
    width: 100%;
    height: 100%;
    /* background: url(../shareImg/bg.jpg) no-repeat; */
    /* background-size: 100% 100%; */
    overflow: scroll;
    display: flex;
    flex-direction: column;
    position: relative;
    overflow-x: hidden;
}
.container .bg{
    width: 100%;
    height: 100%;
}
.container .share{
    position: fixed;
    bottom: 0;
    width: 100%;
    height: 0.92rem;
    display:flex;
}
.container .share img{
    width: 100%;
}
.container .icon {
    width:100%;
}
.container .down {
    width: 100%;
    height: 1.08rem;
    display: flex;
    justify-content:center;
    margin:0.3rem 0;
    }
.container .down img{
    width: 6.05rem;
}

.iPhoneX {
    bottom: 0.68rem !important;
}
