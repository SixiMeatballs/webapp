*{margin: 0;padding: 0;-webkit-tap-highlight-color: rgba(0, 0, 0, 0);}
a{text-decoration: none;}
body,html{width: 100%;height: 100%;overflow:hidden;}
body{width: 100%;height: 100%;overflow:hidden;}

.container{width: 100%;height: 100vh;background: url(../img/receive/bg.png) no-repeat;background-size: 100% 100%;overflow: scroll;display: flex;flex-direction: column;position:relative;}
.container .check{margin: 0rem 0.9rem 0rem;display: flex;flex-direction: column;height:4.2rem;min-height:4.2rem;position: absolute;bottom: 1.74rem;}

.container input{height: 0.9rem;min-height:0.9rem; outline: none;border: none;border-radius: 0.1rem;padding: 0 0.3rem;box-sizing: border-box;font-size: 0.28rem;color: #999999;}
.container .phone{width: 100%;}
.container .code{width: 3.4rem;}
.container .getCode{display: flex;margin-top: 0.2rem;}
.container .getCode .codeButton{width: 2.1rem; height: 0.9rem;min-height:0.9rem;border-radius: 0.1rem;font-size: 0.3rem;color: #333;background: #fda823;text-align: center;line-height: 0.9rem;margin-left: 0.1rem;}

.getBag{width: 4.2rem;height: 0.9rem;min-height:0.9rem;margin-top: 1.2rem;background: url(../img/receive/buttonBg.png) no-repeat;background-size: 100%;font-size: 0.48rem;color: #da1a1f;text-align: center;line-height: 0.9rem;align-self: center;}

.logo{position: absolute;bottom: 0.4rem;left: 45%;width:0.94rem;height:0.36rem;}

.alert{width: 100%;height: 100%;position: absolute;top: 0;background: rgba(0,0,0,0.8);z-index: 9;overflow: hidden;}
.alert .content{position: absolute;top: 0;right: 0;left: 0;bottom: 0;margin: auto;width: 5.71rem;height: 4.2rem;min-height:4.2rem; background:#FFFFFF;border-radius: 0.1rem;padding: 0.4rem 0.36rem;box-sizing: border-box;}
.alert .content .title {display: flex;justify-content: center;align-items: center;position: relative;}
.alert .content .title span{font-size: 0.36rem;color: #333;}
.alert .content .title img{width: 0.26rem;height: 0.26rem;position: absolute;right: 0;}
.alert .content .infos{display: flex;flex-direction: column;font-size: 0.36rem;color: #333333;margin-top: 0.8rem;align-items: center;}
.alert .content .putCode{width: 5rem; height: 1rem;border-radius: 0.1rem;background: #FFFFFF;border: 0.01rem solid #DDDDDD;display: flex;margin-top: 0.4rem;padding: 0.01rem;font-size: 0.36rem;color: #333333;}
.alert .content .putCode input{width: 3rem;border: 0;outline: none;padding-left: 0.3rem;font-size: 0.3rem;color: #999999;border-radius: 0.1rem 0 0 0.1rem;}
.alert .content .putCode .verification{width: 2rem;background: #F7F7F7;text-align: center;border-radius: 0 0.1rem 0.1rem 0;font-size: 0.28rem;line-height: 1rem;}
.alert .content .true{border-radius: 0.1rem;height: 0.98rem;background: #e65248;font-size: 0.32rem;color: #FFFFFF;text-align: center;line-height: 0.98rem;margin-top: 0.4rem;}
