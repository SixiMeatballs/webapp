<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1,minimum-scale=1,maximum-scale=1,user-scalable=no" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <title>猜豆充值</title>
    <link href="css/recharge.css" rel="stylesheet" />
    <script src="../../../Content/js/vue.min.js"></script>
    <script src="../../../Content/js/jquery-3.3.1.min.js"></script>
    <script src="../../../Content/js/main.js"></script>
    <script src="js/recharge.js"></script>
</head>

<body>
    <div class="container" id="recharge">
        <!-- 猜豆充值面板  -->
        <div class="main-panel">
            <div class="recharge-input">
                <span>购买账号</span>
                <input class="inputbox" type="text" placeholder="请输入手机号/用户名" placeholder-style="color:#999;">
                <img class="del-icon" src="img/del-icon.png" />
            </div>
            <div class="recharge-panel">
                <div class="subtitle">面值</div>
                <div class="panel-list">
                    <div class="panel-item" v-for="v in panelList">
                        <div class="panel-card" :id="v.ModelId">
                            <div class="gift" v-if="v.RefundBonus!=0||v.RefundNoGoldScore!=0">
                                <span v-if="v.RefundBonus!=0">送{{v.RefundBonus}}猜豆，</span>
                                <span v-if="v.RefundNoGoldScore!=0">{{v.RefundNoGoldScore}}积分</span>
                            </div>
                            <div class="value">{{v.ModelName}}</div>
                            <template v-if="v.Remark != null">
                                <img class="gift-icon" :src="v.Remark" />
                            </template> 
                            <template v-else>
                            </template>
                            
                        </div>
                        <div class="panel-value">￥{{v.DiscountPrice}}</div>
                    </div>
                </div>
            </div>
        </div>

        <!-- 支付面板 -->
        <!-- <div class="menuList">
            <div class="menu-item">
                <img class="menu-icon" src="http://placehold.it/48x48" alt="failed">
                <span class="menu-name">微信支付</span>
                <img class="select-icon" src="img/circular-nor.png" alt="">
            </div>
        </div> -->
        <!-- 说明 -->
        <div class="recharge-tips">
            <pre>{{rechargeList.GoodsContent}}</pre>
        </div>
        <!-- 支付按钮 -->
        <div class="blank"></div>
        <div class="pay-btn" onclick="alert('支付成功')">立即支付</div>
    </div>
    <script src="../../../share/js/rem.js"></script>
    <script>
        // input焦点事件
        document.querySelector('.inputbox').addEventListener('focus', function () {
            document.querySelector('.del-icon').style.display = 'block';
        });
        document.querySelector('.inputbox').addEventListener('blur', function () {
            document.querySelector('.del-icon').style.display = 'none';
        });
        document.querySelector('.panel-card').addEventListener('click', function () {
            this.classList.add('selected');
        });
        // document.querySelector('.select-icon').addEventListener('click', function () {
        //     this.src = 'img/circular-sel.png';
        // });
    </script>
</body>

</html>