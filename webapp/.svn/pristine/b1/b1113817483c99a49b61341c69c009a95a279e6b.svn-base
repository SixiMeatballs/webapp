<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1,minimum-scale=1,maximum-scale=1,user-scalable=no" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <title></title>
    <link rel="stylesheet" type="text/css" href="css/base.css?1" />
    <link rel="stylesheet" type="text/css" href="css/index.css?1" />
    <script src="../../share/js/rem.js"></script>
    <script src="../../Content/js/main.js"></script>
    <script src="../../Content/js/jquery-3.3.1.min.js"></script>
    <script src="../../Content/js/vue.min.js"></script>
    <script src="js/index.js"></script>
</head>
<body>
    <!--加载动画-->
    <div id="Loading">
        <div class="loader-inner ball-beat">
            <div></div>
            <div></div>
            <div></div>
        </div>
    </div>
    <div class="container" id="shopMall" v-cloak>
        <!--下载-->
        <a class="download linkedme">
            <img src="img/headIcon.png" />
        </a>
        <!--商品列表-->
        <div class="shopList">
            <div class="shopCeils" v-for="r in shopList">
                <a class="shopCeil" href="productShow.html?id={{r.GoodsId}}">
                    <img class="ceilImg" src="{{r.GoodsCover}}" />
                    <div class="shopInfo">
                        <div class="shopTitle">{{r.GoodsName}}</div>
                        <template v-if="r.Status===1">
                            <div class="shopState start">
                                <img src="img/time.png" />
                                <span class="state" v-for="r1 in countDownList" v-if="r1.GoodsId===r.GoodsId">距活动开始：{{r1.time.dd}}天{{r1.time.hh}}时{{r1.time.mm}}分{{r1.time.ss}}秒</span>

                            </div>
                        </template>
                        <template v-if="r.Status===2">
                            <div class="shopState hurry">
                                <img src="img/time.png" />

                                <span class="state" v-for="r1 in countDownList" v-if="r1.GoodsId===r.GoodsId">距结束仅剩：{{r1.time.dd}}天{{r1.time.hh}}时{{r1.time.mm}}分{{r1.time.ss}}秒</span>
                            </div>
                        </template>
                        <template v-if="r.Status===3||r.Status===4">
                            <div class="shopState">
                                <img src="img/time.png" />
                                <div class="state">抢购活动已结束</div>
                            </div>
                        </template>
                        <div class="shopOriginalPrice">￥{{r.MinPrice}}</div>
                        <div class="shopPrice">
                            <div class="currentPrice" v-bind:class="{activated:r.Status!=3||r.Status!=4}">￥{{r.MinDiscountPrice}}</div>
                            <div class="text" v-bind:class="{activated:r.Status!=3||r.Status!=4}">限时抢购价</div>
                            <div class="soldCount">已抢{{r.SoldCount}}件</div>
                        </div>
                    </div>
                </a>
            </div>
        </div>

        <!--下载广告条-->
        <div class="blank"></div>
        <div class="ad">
            <a class="linkedme">
                <img src="img/adIcon.png" />
            </a>
        </div>
        <div class="blank"></div>

        <!--推荐列表-->
        <div class="recommend">
            <div class="recommendTitle">
                <div class="line"></div>
                <div class="center">
                    <img src="img/icon.png" />为你推荐
                </div>
                <div class="line"></div>
            </div>
            <div class="recomList">
                <div class="recomCeils" v-for="r in resultList">
                    <a class="recomCeil" href="productShow.html?id={{r.GoodsId}}">
                        <img class="img" src="{{r.GoodsCover}}" />
                        <div class="productInfo">
                            <div class="productTitle">{{r.GoodsName}}</div>
                            <div class="productPrice">
                                <div class="currentPrice">￥{{r.MinDiscountPrice}}</div>
                                <div class="proNum">已抢{{r.SoldCount}}件</div>
                            </div>
                        </div>
                    </a>
                </div>
            </div>
        </div>

    </div>
    <script src="https://lkme.cc/js/linkedme.min.js"></script>
    <script src="../../Content/js/openapp.js"></script>
    <script type="text/javascript">
        InitOpenApp(
            {
                ActionType: 'Activity',
                ActionValue: 'INDEX',
                Parameters: null
            }
        );
    </script>
</body>
</html> 
